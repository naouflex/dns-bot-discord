# Database Configuration
# Replace with your actual PostgreSQL connection URL
# Examples:
# Local: postgresql://username:password@localhost:5432/dns_monitor
# Cloud: postgresql://username:password@your-db-host.com:5432/dns_monitor
DATABASE_URL=postgresql://dns_user:your_password@localhost:5432/dns_monitor

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_PUBLIC_KEY=your_public_key_here
DISCORD_APPLICATION_ID=your_application_id_here
DISCORD_ROLE_ID=your_role_id_here
# DISCORD_GUILD_ID=your_guild_id_here  # Optional: for reference only (commands sync globally)

# DNS Configuration
DNS_RESOLVERS=1.1.1.1,8.8.8.8,9.9.9.9
DNS_TIMEOUT=5

# Service Configuration
CHECK_INTERVAL_SECONDS=60
LOG_LEVEL=INFO

# User Voting Configuration
VOTE_TIMEOUT_HOURS=24
MIN_VOTES_REQUIRED=2
MAJORITY_THRESHOLD=0.6